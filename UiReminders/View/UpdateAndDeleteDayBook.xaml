<UserControl x:Class="UiReminders.View.UpdateAndDeleteDayBook"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:UiReminders.View"
             mc:Ignorable="d" 
             d:DesignHeight="670" d:DesignWidth="900">

    <StackPanel>

        <local:AddAndUpdate />

        <StackPanel Orientation="Horizontal" HorizontalAlignment="Center">
            <Button Margin="0 5 5 5" Width="98" Content="Delete"  Command="{Binding DeleteDayBookCommand}"></Button>
            <Button Margin="-3 5 5 5" Width="98" Content="Update"  Command="{Binding UpdateDayBookCommand}"></Button>
            <Button Margin="-3 5 5 5" Width="98" Content="Cancel"  Command="{Binding CancelCommand}"></Button>
        </StackPanel>

    </StackPanel>


</UserControl>
